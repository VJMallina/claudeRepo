# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/saveinvest_db?schema=public"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_REFRESH_SECRET="your-super-secret-refresh-token-key-change-this-in-production"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# Application Settings
NODE_ENV="development"
PORT=3000
API_PREFIX="api"

# SMTP Configuration for Email Delivery
# Used for sending daily account statements and investment receipts
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-specific-password"
SMTP_FROM="\"SaveInvest\" <noreply@saveinvest.app>"

# Payment Gateway (Razorpay)
# TEST MODE: Use these test credentials from Razorpay Dashboard (Test Mode)
RAZORPAY_KEY_ID="rzp_test_your_key_id"
RAZORPAY_KEY_SECRET="your_test_secret_key"
RAZORPAY_WEBHOOK_SECRET="your_webhook_secret"

# Twilio Configuration for SMS/OTP
# TEST MODE: Use Twilio test credentials and magic phone numbers
# Get free test credentials: https://console.twilio.com
TWILIO_ACCOUNT_SID="your_twilio_test_account_sid"
TWILIO_AUTH_TOKEN="your_twilio_test_auth_token"
TWILIO_PHONE_NUMBER="+15005550006"
TWILIO_VERIFY_SERVICE_SID="your_verify_service_sid_optional"

# Azure Face API for Liveness Detection
# FREE TIER: 30,000 transactions/month
# Get free tier: https://azure.microsoft.com/en-us/services/cognitive-services/face/
AZURE_FACE_API_KEY="your_azure_face_api_key"
AZURE_FACE_API_ENDPOINT="https://your-resource-name.cognitiveservices.azure.com/"

# KYC Service Configuration
# Test/Sandbox APIs for PAN and Aadhaar verification
KYC_API_KEY="your-kyc-provider-api-key"
KYC_API_URL="https://api.kyc-provider.com"

# PAN Verification (Surepass Sandbox)
PAN_VERIFICATION_API_KEY="your_surepass_sandbox_key"
PAN_VERIFICATION_API_URL="https://sandbox.surepass.io/api/v1/pan/verify"

# Aadhaar Verification (UIDAI Test Environment)
# Use test Aadhaar numbers: 999999990019, 999999990028, 999999990037
AADHAAR_API_URL="https://api.aadhaar-provider.com"
AADHAAR_API_KEY="your_aadhaar_api_key"

# DigiLocker Integration (for Aadhaar eKYC)
DIGILOCKER_CLIENT_ID="your_digilocker_client_id"
DIGILOCKER_CLIENT_SECRET="your_digilocker_client_secret"
DIGILOCKER_REDIRECT_URI="http://localhost:3000/api/kyc/digilocker/callback"

# File Upload Configuration
MAX_FILE_SIZE="5242880" # 5MB in bytes
UPLOAD_PATH="./uploads"

# CORS Configuration
CORS_ORIGIN="http://localhost:19006,http://localhost:19000"

# Feature Flags
ENABLE_AUTO_INVEST="true"
ENABLE_DAILY_STATEMENTS="true"
ENABLE_MONTHLY_STATEMENTS="true"
ENABLE_INVESTMENT_RECEIPTS="true"

# Cron Job Schedules (optional, defaults are set in code)
DAILY_STATEMENT_CRON="0 21 * * *"  # 9 PM daily
MONTHLY_STATEMENT_CRON="0 10 1 * *"  # 10 AM on 1st of month

# Logging
LOG_LEVEL="debug"

# Redis Configuration (if using for caching/queue)
# REDIS_HOST="localhost"
# REDIS_PORT="6379"
# REDIS_PASSWORD=""

# AWS Configuration (if using S3 for file storage)
# AWS_REGION="ap-south-1"
# AWS_ACCESS_KEY_ID="your-access-key"
# AWS_SECRET_ACCESS_KEY="your-secret-key"
# AWS_S3_BUCKET="saveinvest-documents"
