# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/saveinvest_db?schema=public"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_REFRESH_SECRET="your-super-secret-refresh-token-key-change-this-in-production"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# Application Settings
NODE_ENV="development"
PORT=3000
API_PREFIX="api"

# SMTP Configuration for Email Delivery
# Used for sending daily account statements and investment receipts
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-specific-password"
SMTP_FROM="\"SaveInvest\" <noreply@saveinvest.app>"

# Payment Gateway (Razorpay)
RAZORPAY_KEY_ID="your-razorpay-key-id"
RAZORPAY_KEY_SECRET="your-razorpay-key-secret"

# KYC Service Configuration (if using external KYC provider)
KYC_API_KEY="your-kyc-provider-api-key"
KYC_API_URL="https://api.kyc-provider.com"

# File Upload Configuration
MAX_FILE_SIZE="5242880" # 5MB in bytes
UPLOAD_PATH="./uploads"

# CORS Configuration
CORS_ORIGIN="http://localhost:19006,http://localhost:19000"

# Feature Flags
ENABLE_AUTO_INVEST="true"
ENABLE_DAILY_STATEMENTS="true"
ENABLE_MONTHLY_STATEMENTS="true"
ENABLE_INVESTMENT_RECEIPTS="true"

# Cron Job Schedules (optional, defaults are set in code)
DAILY_STATEMENT_CRON="0 21 * * *"  # 9 PM daily
MONTHLY_STATEMENT_CRON="0 10 1 * *"  # 10 AM on 1st of month

# Logging
LOG_LEVEL="debug"

# Redis Configuration (if using for caching/queue)
# REDIS_HOST="localhost"
# REDIS_PORT="6379"
# REDIS_PASSWORD=""

# AWS Configuration (if using S3 for file storage)
# AWS_REGION="ap-south-1"
# AWS_ACCESS_KEY_ID="your-access-key"
# AWS_SECRET_ACCESS_KEY="your-secret-key"
# AWS_S3_BUCKET="saveinvest-documents"
